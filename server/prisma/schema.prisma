generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  name       String?
  password   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  documents  Document[]
  mcqHistory MCQHistory[]
}

model Document {
  name      String
  content   String
  id        Int      @id @default(autoincrement())
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  embedding Float[]
  user      User     @relation(fields: [userId], references: [id])
  mcqs      MCQ[]
}

model MCQ {
  id         Int          @id @default(autoincrement())
  question   String
  options    String[]
  answer     String
  documentId Int
  difficulty Difficulty   @default(medium)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  document   Document     @relation(fields: [documentId], references: [id])
  history    MCQHistory[]
}

model MCQHistory {
  id            Int      @id @default(autoincrement())
  userId        Int
  mcqId         Int?
  viewedAt      DateTime @default(now())
  correctAnswer String
  createdAt     DateTime @default(now())
  isCorrect     Boolean
  question      String
  updatedAt     DateTime @updatedAt
  userAnswer    String
  mcq           MCQ?     @relation(fields: [mcqId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
}

enum Difficulty {
  easy
  medium
  hard
}
